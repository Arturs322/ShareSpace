@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Name" class="form-control" placeholder="Please choose your Name." />
                <label asp-for="Input.Name" class="form-label"></label>
            </div>
            <div class="form-floating mb-3">
                <textarea asp-for="Input.Description" class="form-control" placeholder="Please choose your Postal Code." ></textarea>
                <label asp-for="Input.Description" class="form-label"></label>
            </div>
            @if (!string.IsNullOrEmpty(Model.Input.ProfilePictureUrl))
            {
                <div>
                    <img src="@Model.Input.ProfilePictureUrl" class="profile-img-account" alt="Profile Picture" />
                </div>
            }
            <div class="form-floating mb-3">
                <input asp-for="Input.ProfilePicture" type="file" class="form-control" />
                <label asp-for="Input.ProfilePicture" class="form-label">Choose Profile Picture</label>
                <span asp-validation-for="Input.ProfilePicture" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Please enter your phone number." />
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.City" class="form-control" placeholder="Please choose your City." />
                <label asp-for="Input.City" class="form-label"></label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.State" class="form-control" placeholder="Please choose your State." />
                <label asp-for="Input.State" class="form-label"></label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.StreetAddress" class="form-control" placeholder="Please choose your Street Address." />
                <label asp-for="Input.StreetAddress" class="form-label"></label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.PostalCode" class="form-control" placeholder="Please choose your Postal Code." />
                <label asp-for="Input.PostalCode" class="form-label"></label>
            </div>
            
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
